{% comment %} // collection.liquid for basic_shopify_theme {% endcomment %}

{% layout 'theme' %}

<div class="container mx-auto py-6">
  <h1 class="text-2xl font-bold mb-6">{{ collection.title }}</h1>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {% for product in collection.products %}
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <a href="{{ product.url }}" class="block">
          <img
            src="{{ product.featured_image.src | img_url: 'medium' }}"
            alt="{{ product.featured_image.alt }}"
            class="w-full h-64 object-cover"
          >
        </a>
        <div class="p-4">
          <h2 class="text-lg font-bold mb-2">
            <a href="{{ product.url }}" class="text-gray-900 hover:text-gray-600">{{ product.title }}</a>
          </h2>
          <p class="text-gray-700">{{ product.description | strip_html | truncatewords: 20 }}</p>
          <p class="text-gray-900 font-bold mt-2">{{ product.price | money }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
