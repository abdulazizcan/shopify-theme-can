{% layout 'theme' %}

<div class="container mx-auto py-6">
  <h1 class="text-2xl font-bold mb-6">Welcome to {{ shop.name }}</h1>
  <p class="mb-6">This is the homepage of your Shopify store.</p>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {% for product in collections.frontpage.products %}
      <div class="col-span-1">
        <a href="{{ product.url }}" class="block">
          <img
            src="{{ product.featured_image.src | img_url: 'medium' }}"
            alt="{{ product.featured_image.alt }}"
            class="w-full h-auto mb-2"
          >
          <h3 class="text-lg font-bold mb-2">{{ product.title }}</h3>
          <span class="text-gray-900 font-bold">{{ product.price | money }}</span>
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="mt-12">
    <h2 class="text-xl font-bold mb-6">Featured Collection</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for product in collections.featured.products %}
        <div class="col-span-1">
          <a href="{{ product.url }}" class="block">
            <img
              src="{{ product.featured_image.src | img_url: 'medium' }}"
              alt="{{ product.featured_image.alt }}"
              class="w-full h-auto mb-2"
            >
            <h3 class="text-lg font-bold mb-2">{{ product.title }}</h3>
            <span class="text-gray-900 font-bold">{{ product.price | money }}</span>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
